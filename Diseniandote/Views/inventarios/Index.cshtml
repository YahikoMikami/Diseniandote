@model IEnumerable<Diseniandote.Models.inventario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cantidadMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadMax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadDisponible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadMin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadMax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadDisponible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idInventario }) |
            @Html.ActionLink("Details", "Details", new { id=item.idInventario }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idInventario })
        </td>
    </tr>
}

</table>
